@model IEnumerable<MongoDBPool.Models.Player>

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<p>
    @Html.ActionLink("Create New Player", "Create")
</p>
<table>
    <tr>
        <th>
            FirstName
        </th>
        
        <th>
            LastName
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { controller = "Player", id = item.Id.ToString() })    |
                @Html.ActionLink("Detele", "Delete", new { controller = "Player", id = item.Id.ToString() })  |
                @Html.ActionLink("Add Results", "CreateResult", new { controller = "Result", id = item.Id.ToString() }) |
                @Html.ActionLink("Show Results", "DisplayResults", new { controller = "Result", id = item.Id.ToString() })
            </td>
        </tr> 
    }
</table>

 <div>
        @Html.ActionLink("Go to Result List", "Index","Result")
    </div>


